<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/home">
    <fragment
        android:id="@+id/home"
        android:name="org.moson.checktx.app.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/home_fragment">

        <argument
            android:name="appname"
            android:defaultValue="navigation导航"
            app:argType="string"
            app:nullable="false" />

        <action
            android:id="@+id/home2appinfo"
            app:destination="@+id/appinfo" />
    </fragment>

    <fragment
        android:id="@+id/appinfo"
        android:name="org.moson.checktx.app.ui.appinfo.AppInfoFragment"
        android:label=""
        tools:layout="@layout/app_info_fragment" />
</navigation>